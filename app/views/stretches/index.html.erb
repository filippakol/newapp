<hr>
<div>
  <div style="color:brown">
    <h1>
      List of all stretches
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Feel free to add a new stretch to the list below!
    </h2>

    <form action="/insert_stretch" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="body_part_id_box">
          Body part
        </label>
        <select name ="query_body_part_id">
        <% BodyPart.all.order(:name).each do |a_body| %>
        <option value="<%=a_body.id%>">
        <%= a_body.name%>
        </option>
        <%end%>
        </select>
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button class="btn btn-primary">
        Create stretch
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th width= 50 style="text-align:center">
          ID
        </th>

        <th width= 100 style="text-align:center"> 
          Name
        </th>

        <th width= 100 style="text-align:center">
          Body part
        </th>

        <th style="text-align:center">
          Description
        </th>

        <th width= 100 style="text-align:center">
          Created at
        </th>

        <th width= 100 style="text-align:center">
          Updated at
        </th>
        <th width= 100 style="text-align:center">
          About
        </th>
      </tr>

      <% @list_of_stretches.each do |a_stretch| %>
      <tr>
        <td style="text-align:center">
          <%= a_stretch.id %>
        </td>

        <td style="text-align:center">
          <%= a_stretch.name %>
        </td>

        <td style="text-align:center">
          <%= a_stretch.body_part.name %>
        </td>
        <td>
          <%= a_stretch.description %>
        </td>

        <td style="text-align:center">
          <%= time_ago_in_words(a_stretch.created_at) %> ago
        </td>
        <td style="text-align:center">
          <%= time_ago_in_words(a_stretch.updated_at) %> ago
        </td>

        <td style="text-align:center">
          <a href="/stretches/<%= a_stretch.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
